[Unit]
Description=Runtipi Installation Service
After=network-online.target docker.service runtipios-setup.service
Wants=network-online.target
Requires=docker.service
ConditionPathExists=!/opt/runtipi/state/.installed

[Service]
Type=oneshot
ExecStart=/usr/local/bin/runtipi-install
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal
TimeoutStartSec=1200

[Install]
WantedBy=multi-user.target
